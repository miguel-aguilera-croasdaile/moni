<div class="container">
  <h4>Your Cart </h4>
  <% if @cart.cart_items == [] %>
    <p>Your cart is empty <%= link_to "Keep Shopping!", products_path %></p>
  <% else %>
    <div class="row">
      <div class="col-7">
      <div class="row">
      <div class="col-3"><b> Name </b></div>
      <div class="col-3"><b> Price </b></div>
      <div class="col-3"><b> Quantity </b></div>
      <div class="col-3"><b>  </b></div>
      </div>
        <% @cart.cart_items.each do |c| %>
          <div class="row">
            <div class="col-3">
              <p><%= c.product.name %></p>
            </div>
            <div class="col-3">
              <p><%= c.amount %></p>
            </div>
            <div class="col-3">
              <p><%= 1 %></p>
            </div>
            <div class="col-3">
            <%= link_to "Remove from Cart", cart_cart_item_path(@cart, c), method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-5">
        <p> <%= link_to "Keep Shopping", products_path %> </p>
        <%= simple_form_for(@order) do |f| %>
          <%= f.submit "Proceed to Checkout" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
