<div class="container">
  <div class="row py-4">
    <div class="col-6">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.status %></span></small></h1>
      <div class="list-unstyled">
        <p><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></p>
        <ul>
        <% @order.order_items.each do |oi| %>
        <li><%= oi.product.name %></li>
        <% end %>
        </ul>
        <p><strong>ORDER TOTAL:</strong> <%= @order.amount %></p>
        <p><strong>ORDER STATUS:</strong> <%= @order.status %></p>

      </div>
    </div>
    <div class="col-6">
      <div class="btn btn-primary">Pay Now</div>
    </div>
  </div>
</div>
