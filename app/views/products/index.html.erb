<div class="container">

  <br>
  <div class="row">
    <div class="d-none d-md-block col-md-3 col-lg-3 col-xl-3">
      <div class="product-card">
        <p>Category</p>
        <hr>
        <p>Price</p>
        <hr>
        <p>Location</p>
      </div>
    </div>
    <div class="col-sm-12 col-md-9 col-lg-9 col-xl-9">
      <div class="row">
        <% @products.each do |l| %>
          <div class="product-card-wrapper col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4" style="margin-bottom: 20px">
            <%= link_to product_path(l) do %>
              <div class="product-card">
                <div class="product-image-wrapper">
                  <%= cl_image_tag(l.photo_url, width: "100%", height: "100%", crop: :cover, class: "small-image") %>
                </div>
                <hr>
                <p style="margin: 0"><%= l.name %></p>
                <p style="margin: 0"> $<%= l.price %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
